<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardBackgroundColor"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="true"
    app:contentPadding="7dp"
    app:strokeColor="@color/cardBorderColor"
    app:strokeWidth="1dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:weightSum="5.5">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sensorImage_field"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/cardBackgroundColor"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:tint="@color/sensorIconColor"
            android:visibility="visible" />

        <TextView
            android:id="@+id/sensorName_field"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:padding="2dp"
            android:gravity="center"
            android:layout_weight="1.5"
            android:text="@string/no_name_available"
            android:textAppearance="@style/TextAppearance.MyTheme.SensorNameText"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="4">


            <TextView
                android:id="@+id/sensorValue_field"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center_vertical|right"
                android:text="@string/no_value_available"
                android:textAppearance="@style/TextAppearance.MyTheme.SensorValueText" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/health_status_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="\u2B24"
                    android:textColor="@color/status_healthy_color"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textSize="16sp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/units_field"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="mmHg"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/cardTextColor"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>


        <include layout="@layout/card_expanded_section"/>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
