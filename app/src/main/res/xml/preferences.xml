<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Basic Settings">
        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Enable message notifications"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Caregiver Contact Settings">
    <!--<Preference-->
        <!--app:key="feedback"-->
        <!--app:title="Send feedback"-->
        <!--app:summary="Report technical issues or suggest new features"/>-->

    <EditTextPreference
    android:dialogTitle="Enter a phone number"
    android:key="PhoneNumber"
    android:summary="Send regular SMS updates to a phone number"
    android:title="Contact a loved one"
    android:inputType="text"
    app:useSimpleSummaryProvider="true"/>
    <ListPreference
        android:dialogTitle="Send update every..."
        android:entries="@array/settings_list_preference_titles"
        android:entryValues="@array/settings_list_preference_values"
        android:key="updater_preference"
        android:summary="Select frequency"
        android:title="Schedule Regular Updates"
        app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>
</PreferenceScreen>

